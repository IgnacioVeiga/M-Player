{
  "name": "m-player",
  "author": "Ignacio Veiga <ignacioveiga@example.com>",
  "description": "Music Player made with React & Electron",
  "version": "0.9.0",
  "private": true,
  "main": "src/electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "cross-env NODE_ENV=development electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.ignacioveiga.mplayer",
    "productName": "M-Player",
    "icon": "src/assets/icon",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "dependencies": {
    "material-icons": "^1.13.12",
    "mime-types": "^3.0.1",
    "music-metadata": "^10.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.5"
  }
}
