{
  "name": "m-player",
  "version": "0.4.0",
  "private": true,
  "main": "src/electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "NODE_ENV=development electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.ignacioveiga.mplayer",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*"
    ],
    "asar": true
  },
  "dependencies": {
    "material-icons": "^1.13.12",
    "music-metadata": "^10.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.5"
  }
}